@using CCASA.Models 
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row gutters">
    <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
            <div class="card-body">
                <div class="account-settings">
                    <div class="user-profile">
                        <div class="user-avatar">
                            <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="Maxwell Admin">
                        </div>
                        <h5 class="user-name">@Model.Name</h5>
                        <h6 class="user-email">@Model.Email</h6>
                    </div>
                    <div class="about">
                        <h5 class="mb-2 text-primary">About</h5>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <form method="post">
        <div class="form-group">
            <label asp-for="password"></label>
            <input asp-for="password" class="form-control" /> 
        </div>
        <div class="form-group">
            <label asp-for="Gender"></label>
            <input asp-for="Gender" class="form-control" /> 
        </div>
        <div class="form-group">
            <label asp-for="Religion"></label>
            <input asp-for="Religion" class="form-control" /> 
        </div>
        <div class="form-group">
            <label asp-for="BloodGroup"></label>
            <input asp-for="BloodGroup" class="form-control" /> 
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
            <input type="submit" value="Cancel" class="btn btn-secondary" />
        </div>
    </form>

</div>